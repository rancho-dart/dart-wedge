{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build nfq_handler",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-I/usr/include/libnetfilter_queue",
                "-o",
                "${workspaceFolder}/nfq_handler",
                "${workspaceFolder}/nfq_handler.c",
                "${workspaceFolder}/dns_utils.c",
                "${workspaceFolder}/checksum.c",
                "${workspaceFolder}/txt_query_thread.c",
                "${workspaceFolder}/pseudo_ip_capi.cpp",
                // "${workspaceFolder}/PseudoIPAllocator.cpp",
                // "${workspaceFolder}/PseudoIPAllocatorWrapper.cpp",
                "-lnetfilter_queue",
                "-lresolv",
                "-lpthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
